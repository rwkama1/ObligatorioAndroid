<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.waldemar.obligatorioandroid.ListarMaterialesFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ListView
                android:id="@+id/lvMovimientos"
                android:layout_width="200dp"
                android:layout_height="900dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnAMov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="btnAMovOnClick"
                    android:text="Agregar Movimiento"
                     />
                <Button
                    android:id="@+id/btnactmov"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="btnActualizarMovOnClick"
                    android:text="Actualizar Lista Movimiento"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
